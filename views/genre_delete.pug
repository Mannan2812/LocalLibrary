extends layout
block content
h1 h1 #{title}: #{genre._id}
p= genre.name

if book.length
  p #[strong Delete the following books before attempting to delete this genre.]
  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
    each b in book
      dt
        a(href=b.url) #{b.title}
      dd #{b.summary}

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#aid.form-control(type='hidden',name='authorid', required='true', value=author._id )

      button.btn.btn-primary(type='submit') Delete
